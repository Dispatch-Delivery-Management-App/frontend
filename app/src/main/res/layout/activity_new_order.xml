<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".NewOrderActivity">

<TextView
    android:id="@+id/textview_home_second"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:textSize="20sp"
    app:layout_constraintBottom_toTopOf="@id/button_orderConfirm"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="THIS IS NEW ORDER"/>

<Button
    android:id="@+id/button_orderConfirm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Confirm"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textview_home_second" />
</androidx.constraintlayout.widget.ConstraintLayout>