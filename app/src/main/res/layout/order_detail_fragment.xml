    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:paddingLeft="@dimen/orderlist_padding">

        <TextView
            android:id="@+id/OrderID"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:text="Order ID:"
            android:textSize="@dimen/order_detail_list" />

        <TextView
            android:id="@+id/OrderID_filling"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:text="null"
            android:textSize="@dimen/order_detail_list" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/orderlist_padding">

        <TextView
            android:id="@+id/create_time"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="placed at:"
            android:textColor="@color/white"
            android:textSize="@dimen/order_detail_list" />

        <TextView
            android:id="@+id/create_time_filling"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:ems="10"
            android:text="null"
            android:textSize="@dimen/order_detail_list" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/orderlist_padding">

        <TextView
            android:id="@+id/category"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:ems="10"
            android:text="Package Category:"
            android:textSize="@dimen/order_detail_list" />

        <TextView
            android:id="@+id/category_filling"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="@dimen/order_detail_list" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/orderlist_padding">

        <TextView
            android:id="@+id/total_cost"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:ems="10"
            android:text="Payment:"
            android:textSize="@dimen/order_detail_list" />

        <TextView
            android:id="@+id/payment"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:ems="10"
            android:textSize="@dimen/order_detail_list" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/orderlist_padding">


        <TextView
            android:id="@+id/from_address"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:ems="10"
            android:text="From:"
            android:textSize="@dimen/order_detail_list" />


        <TextView
            android:id="@+id/from_address_filling"
            tools:layout_editor_absoluteX="16dp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="@dimen/order_detail_list" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/orderlist_padding">


        <TextView
            android:id="@+id/to_address"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:ems="10"
            android:text="To:"
            android:textSize="@dimen/order_detail_list" />

        <TextView
            android:id="@+id/to_address_filling"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="@dimen/order_detail_list" />

    </LinearLayout>
</LinearLayout>